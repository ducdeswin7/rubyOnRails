
<%= bootstrap_form_for @product do |f| %>

    <% if @product.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= pluralize(@product.errors.count, "error") %> prohibited
            this product from being saved:
          </h2>
          <ul>
            <% @product.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <%= f.text_field :title %>

    <%= f.select :category_id, Category.all.collect {|x| [x.title, x.id]}, {}, :multiple => false %>

    <%= f.text_field :description %>

    <%= f.text_field :price %>

    <%= f.text_field :location %>

    <%= f.file_field :image, as: :file %>

    <%= f.submit class: "btn btn-default"%>

<% end %>